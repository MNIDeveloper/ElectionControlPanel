<div style="text-align:center;" class="bg-light h-100">
    <h1 class="text-primary">User Registration</h1>
</div>
<div class="container-fluid overflow-auto bg-light h-100">
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
        Add User
    </button>
    @if (Model.users.Count == 0)
    {
        <p><em>Loading...</em></p>
    }
    else
    {
        <br /><br />
              <table border="1" cellpadding="2" class="table-bordered border-primary-subtle table table-primary table-striped">
                  <thead>
                      <tr>
                          <th class="text-primary">User ID</th>
                          <th class="text-primary">First Name </th>
                          <th class="text-primary"> Last Name</th>
                          <th class="text-primary"> Email</th>
                          <th class="text-primary"> Position</th>
                          <th class="text-primary"> Options</th>
                      </tr>
                  </thead>
                  <tbody>
                      @foreach (var user in Model.users)
                      {
                          string x;
                          if (@user.Position == 1)
                          {
                              x = "Adminstrator";
                          }
                          else
                          {
                              x = "Clerk";
                          }

                      <tr>
                          <td>@user.UserId</td>
                          <td>@user.Fname</td>
                          <td>@user.Lname</td>
                          <td>@user.Email</td>
                          <td>@x</td>
                          <td>@Html.ActionLink("Edit", "UserEdit", new { id = user.UserId }, new { @class = "text-success" })  @Html.ActionLink("Delete", "UserDelete", new { id = user.UserId }, new { @class = "text-danger" })</td>
                      </tr>
                  }
                  <tr>
                      <td></td>
                      <td></td>
                      <td></td>
                      <td></td>
                      <td></td>
                      <td></td>
                  </tr>
                      </tbody>
                  </table>
    }
</div>

