<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5 text-primary" id="exampleModalLabel">User Options</h1>
            </div>
            @using (Html.BeginForm("UserSave", "Home", FormMethod.Post))
            {
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                {
                    <table cellpadding="2">
                        <tr>
                            <td colspan="3" align="center"><h4 name="lblHeader" class="text-primary"><strong> Add A User Profile</strong></h4></td>

                        </tr>
                        <tr hidden>
                            <td><label name="lblUserID" class="text-primary"><strong>UserID :</strong></label></td>
                            <td>@Html.TextBoxFor(u => u.AddUser.UserId, "", new { @class = "form-control", @readonly = "true" }) </td>
                        </tr>
                        <tr>
                            <td><label name="lbFName" class="text-primary"><strong>First Name :</strong></label></td>
                            <td>@Html.TextBoxFor(u => u.AddUser.Fname, "", new { @class = "form-control" }) </td>
                            <td>@Html.ValidationMessageFor(u => u.AddUser.Fname, "", new { @class = "text-danger" })</td>
                        </tr>
                        <tr>
                            <td><label name="lblLName" class="text-primary"><strong>Last Name :</strong></label></td>
                            <td>@Html.TextBoxFor(u => u.AddUser.Lname, "", new { @class = "form-control" })</td>
                            <td>@Html.ValidationMessageFor(u => u.AddUser.Lname, "", new { @class = "text-danger" })</td>
                        </tr>
                        <tr>
                            <td><label name="lblEmail" class="text-primary"><strong>Email :</strong></label></td>
                            <td>@Html.TextBoxFor(u => u.AddUser.Email, "", new { @class = "form-control" }) </td>
                            <td>@Html.ValidationMessageFor(u => u.AddUser.Email, "", new { @class = "text-danger" })</td>
                        </tr>
                        <tr>
                            <td><label name="lblPassword" class="text-primary"><strong>Password :</strong></label></td>
                            <td>@Html.TextBoxFor(u => u.AddUser.Password, "", new { @class = "form-control" }) </td>
                            <td>@Html.ValidationMessageFor(u => u.AddUser.Password, "", new { @class = "text-danger" })</td>
                        </tr>
                        <tr>
                            <td><label name="lblGender" class="text-primary"><strong>Position :</strong></label></td>
                            <td>
                                @Html.DropDownListFor(u => u.AddUser.Position, new List<SelectListItem>{
                                new SelectListItem {Value ="1",Text = "Admin" },
                                new SelectListItem {Value ="2",Text = "Clerk" }},
